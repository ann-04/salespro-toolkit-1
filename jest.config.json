{
    "testEnvironment": "node",
    "testMatch": [
        "**/__tests__/**/*.test.js"
    ],
    "collectCoverageFrom": [
        "server/**/*.js",
        "!server/__tests__/**",
        "!server/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
        "text",
        "lcov",
        "html"
    ],
    "setupFilesAfterEnv": [
        "<rootDir>/jest.setup.js"
    ],
    "testTimeout": 10000,
    "verbose": true
}